{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./.tsbuildinfo/tsconfig.app.tsbuildinfo",
    "target": "es2021",
    "lib": ["es2021", "dom"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.tsx"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
